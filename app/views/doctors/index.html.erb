<h1>Doctors#index</h1>

<h2>Doctors Table</h2>
<h3><%= link_to 'New Doctor', new_doctor_path %></h3>

<table>
    <thead>
        <tr>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>No. of prescriptions</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
    <%@doctors.each do |doctor| %>
    <tr>
        <td><%= doctor.id %></td>
        <td><%= doctor.doctor_name %></td>
        <td></td>
        <td><%= link_to 'See all prescriptions', doctor_prescriptions_path(doctor.id) %></td>
        <td><%= link_to 'Update', edit_doctor_path(doctor.id)  %></td>
        <td><%= link_to 'Delete', doctor_path(doctor.id), method: :Delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>

    <%end%>
    </tbody>

</table>