<h1>Prescriptions#new</h1>

<h3><%= link_to 'Home', doctors_path %></h3>

<%= form_with model:[@doctor, @prescription] do |form| %>
<fieldset>
   <legend>Add new prescription:</legend>
     <fieldset>
        <%= form.label :doctor_name, 'Prescribing Doctor:' %>
        <%= form.select :doctor_name, ["existing_doc1", "existing_doc2", "existing_doc3"] %>
     </fieldset>

    <fieldset>
        <%= form.label :taken_for, 'Prescription is taken for?' %>
        <%= form.select :taken_for, ["existing condition1", "existing condition2", "existing condition3"] %>
     </fieldset>
    
    <fieldset>
        <div>Is prescription eligible for discount?</div>
        <%= form.radio_button(:discount_eligible, true) %>
        <%= form.label :discount_eligible_true, 'No' %>
        <%= form.radio_button(:discount_eligible, false) %>
        <%= form.label :discount_eligible_false, 'Yes' %>
        
    </fieldset>
    <div><%= form.submit %></div>
</fieldset>
<% end %>